//wap to demonstrate array of objects

   #include<iostream>
   using namespace std;

 class employee
 {
 	private:
 		char name[20];
 		int age,salary;
 		
 	public:
 		void getdata();
 		void putdata();
 		
 };
 
 void employee::getdata()
 {
 	cout<<"enter name"<<endl;
 	cin>>name;
 	fflush(stdin);
 	
 	cout<<"enter age"<<endl;
 	cin>>age;
 	
 	cout<<"enter salary"<<endl<<endl;
 	cin>>salary;
 	
 	
 }
 
 void employee::putdata()
 {
 	cout<<"Name="<<name<<endl;
 	cout<<"Age="<<age<<endl;
 	cout<<"salary="<<salary<<endl;
 }
 
 
 
 int main()
 {
 	employee emp[2];
 	for(int i=0;i<2;i++)
 	{
 		emp[i].getdata();
 	
	 }
	  cout<<endl;
	 	for(int i=0;i<2;i++)
 	{
 		emp[i].putdata();
 	
	 }
	 
	 return 0;
 }
