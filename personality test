 int main()
 {
 	PersonTest obj;
 	int cows,tigers,sheeps,horses,pigs;
 		string dogs,cats,rats,coffees,oceans;
 	string yellows,oranges,reds,whites,greens;
 	
 	cout<<"1) Cows\n 2) Tigers\n 3) Sheeps\n 4) Horses\n 5) Pigs"<<endl;
 	cout<<"Please give a priority number from (1-5) to each one by one "<<endl<<endl;
 	cin>>cows>>tigers>>sheeps>>horses>>pigs;
 	
 	obj.setValueC(cows,tigers,sheeps,horses,pigs);
 	
 	system("cls");
 	cout<<"\nGive your description on DOg"<<endl;
