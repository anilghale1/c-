 	cout<<"GIve your description on Oceans"<<endl<<endl;
 	cin>>oceans;
 	
 	obj.setValueL(dogs,cats,rats,coffees,oceans);
 	system("cls");
 	
    cout<<"\nImagine about Yellow colour and think of one person on this color"<<endl;
 	cin>>yellows;
 	
 	cout<<"Imagine about Orange colour and think of one person on this color"<<endl;
 	cin>>oranges;
 	
 	cout<<"Imagine about Red colour and think of one person on this color"<<endl;
 	cin>>reds;
 	
 	cout<<"Imagine about white colour and think of one person on this color"<<endl;
 	cin>>whites;
 	
 	cout<<"Imagine about Green colour and think of one person on this color"<<endl;
