//personality test program

#include<iostream>
#include<string>
 using namespace std;
 
 class PersonTest
 {
 	int cow,tiger,sheep,horse,pig;
 	string dog,cat,rat,coffee,ocean;
 	string yellow,orange,red,white,green;
 	public:
 		void setValueC(int c,int t,int s,int h,int p)
 		
 		{
 		    cow=c;
			 tiger=t;
			 sheep=s;
			 horse=h;
			 pig=p;	
		 }
		 void displayhead();
		 
		 void displayC();
		 void displayc();
			  
			   void display1();
			   void display2();
			   void display3();
			   
			   void displayL();
			   void displayP();
			   
		
				   
		void setValueL(string d,string ca,string r,string co,string o)
		 {
		 	dog=d;
		 	cat=ca;
		 	rat=r;
		 	coffee=co;
		 	ocean=o;
		 }
		 void setValueP(string y,string ora,string re,string w,string g)
		 {
		 	yellow=y;
		 	orange=ora;
		 	red=re;
		 	white=w;
		 	green=g;
		 }
 	
 };
 
 void PersonTest::displayC()
		 {
		 	if(cow==5)
		 	  {
		 	  	cout<<"\n\nYour First Priority in Life is Your Carrer"<<endl;
			   }
			   else if(tiger==5)
			   {
			   	 cout<<"Your First Priority in Life is Your Pride"<<endl;
			   	 
			   }
			   else if(sheep==5)
