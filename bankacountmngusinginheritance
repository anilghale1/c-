//program to ask user p,t,r and calculate total amount using inheritance concept
#include<iostream>
#include<cmath>
 using namespace std;
 
 class Account
 {
 	protected:
    string name;
	double ac_num;
	static int rate1;
	static int rate2;
	int time;
	int p_amt;
	int SI;
	int CI;
	
	    	
 };
 
 
 class Current_ac : public Account
 {
 	
 	public:
 	void setValue1(int p,int t,double an)
 	{
 		p_amt=p;
 		time=t;
 		ac_num=an;
	 }
    void calc_SI()
	{
		int SI=0;
		SI=(p_amt*time*rate1)/100;
	  } 
	  void display1()
	  {
	  	 cout<<"Total Amount of Bank ac Number "<<ac_num<<" is "<<(SI+p_amt)<<endl;
	  	
	  }
	   
	 	
 };
 
 class Saving_ac : public Account
 {    
   int CI;
    	public:
 	void setValue2(int p,int t,double an)
 	{
 		p_amt=p;
 		time=t;
 		ac_num=an;
	 }
    void calc_CI()
	{
		int SI=0;
		CI=p_amt*pow((1+rate2/100),time);
	  } 
	  void display2()
	  {
	  	 cout<<"Total Amount of Bank ac Number "<<ac_num<<" is "<<(CI+p_amt)<<endl;
	  	
	  }
		
 };
 int Account :: rate1=5;
 int Account :: rate2=10;
 
 int main()
 {
 	Current_ac obj;
 	Saving_ac obj1;
 	
 	int principle,time;
 	double acountnum;
    
    
 	cout<<"Enter your acount numnber"<<endl;
 	cin>>acountnum;
 	
	 cout<<"Enter your principle amount to deposit into bank"<<endl;
 	cin>>principle;
 	
 	cout<<"Enter time how much you like to hold your amounts"<<endl;
 	cin>>time;
 	
 	obj.setValue1(principle,time,acountnum);
 	obj.display1();
 	
 	obj1.setValue2(principle,time,acountnum);
 	obj1.display2();
 	
 	return 0;
 }
 
 
