//program to ask user p,t,r and calculate total amount using inheritance concept
#include<iostream>
#include<cmath>
 using namespace std;
 
 class Account
 {
   public:
  
 	protected:
    string name;
	double ac_num;
	
	 int rate1;
  int rate2;
	
	int time;
	int p_amt;
	double SI;
	double CI;
	
	    	
 };
 
 
 class Current_ac : public Account
 {
 	
 	public:
 	void setValue1(int p,int t,double an,int r)
 	{
 		p_amt=p;
 		time=t;
 		ac_num=an;
 		rate1=r;
	 }
    void calc_SI()
	{
		int SI;
		SI=((p_amt*time*rate1)/100);
	  } 
	  void display1()
	  {
	  	 cout<<"Total Amount of Bank ac Number "<<ac_num<<" is "<<(SI+p_amt)<<endl;
	  	
	  }
	   
	 	
 };
  
   class Saving_ac : public Account
 { 
   
    	public:
 	void setValue2(int p,int t,double an,int r1)
 	{
 		p_amt=p;
 		time=t;
 		ac_num=an;
 		rate2=r1;
	 }
    void calc_CI()
	{
		int CI;
		CI=(p_amt*pow((1+rate2/100),time));
	  } 
	  void display2()
	  {
	  	 cout<<"Total Amount of Bank ac Number "<<ac_num<<" is "<<(CI+p_amt)<<endl;
	  	
	  }
		
 };
 
 
 int main()
 {
 	Current_ac obj;
 	Saving_ac obj1;
 	
 	int principle,time;
 	double acountnum;
 	int ra,ra1;
    
    
 	cout<<"Enter your acount numnber"<<endl;
 	cin>>acountnum;
 	
	 cout<<"Enter your principle amount to deposit into bank"<<endl;
 	cin>>principle;
 	
 	cout<<"Enter time how much you like to hold your amounts"<<endl;
 	cin>>time;
 	cout<<"Enter rate for SI"<<endl;
 	cin>>ra;
     cout<<"Enter rate for CI"<<endl;
 	cin>>ra1;
 	obj.setValue1(principle,time,acountnum,ra);
 	obj.display1();
 	
 	obj1.setValue2(principle,time,acountnum,ra1);
 	obj1.display2();
 	
 	return 0;
 }
 
 
